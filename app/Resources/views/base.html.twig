{% import "aui_macros.html.twig" as AUI %}

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=EDGE">
    <title>{% block pageTitle 'Default Page' %} | {% block projectTitle 'IslamKosh' %}</title>
    {% stylesheets
        'aui/css/aui.min.css'
        'aui/css/aui-experimental.min.css'
        'css/app.css'
        filter='cssrewrite' output='css/compiled/all.css' %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
</head>

<body class="aui-layout {{ bodyClass|default('aui-theme-default') }}">

    {% block body %}
    <div id="page">

        {% block header %}
        <header id="header" role="banner">
            <nav class="aui-header aui-dropdown2-trigger-group" role="navigation">
                <div class="aui-header-inner">
                    <div class="aui-header-primary">
                        <h1 id="logo" class="aui-header-logo aui-header-logo-textonly">
                            <a href="/"><span class="aui-header-logo-device">{{ appName|default('IslamKosh') }}</span></a>
                        </h1>
                        {% block topNavigation %}
                        <ul class="aui-nav">
                            <li><a href="/">Home</a></li>
                        </ul>
                        {% endblock %}
                    </div>
                </div>
            </nav>
        </header>
        {% endblock %}

        {% block content %}
        <section id="content" role="main">
        </section>
        {% endblock %}

        {% block footer %}
        <footer id="footer">
        </footer>
        {% endblock %}

    </div>
    {% endblock %}

    <script src="//cdnjs.cloudflare.com/ajax/libs/require.js/2.1.14/require.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/1.8.1/jquery.min.js"></script>

    {% javascripts
        'aui/js/aui.min.js'
        'aui/js/aui-experimental.min.js'
        'aui/js/aui-soy.min.js'
        'js/app.js'
        output='js/compiled/all.js' %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}

</body>
</html>
